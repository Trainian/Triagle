                        <li class="dropdown"><a href="#">Другое<i class="fa fa-angle-down"></i></a>
                            <ul role="menu" class="sub-menu">
                                <li class="@(ViewData["Title"]?.ToString() == "О нас" ? "active" : "")" ><a asp-area="" asp-page="/AboutUs">О нас</a></li>
                                <li class="@(ViewData["Title"]?.ToString() == "Контакты" ? "active" : "")" ><a asp-area="" asp-page="/Contact">Контакты</a></li>
                                <li class="@(ViewData["Title"]?.ToString() == "Скоро" ? "active" : "")" ><a asp-area="" asp-page="/ComingSoon">Скоро</a></li>  
                            </ul>
                        </li>
                        @if(User.IsInRole("Administrator"))
                        { <li class="administrate" ><a asp-area="Administration" asp-page="/Index">Администрирование</a></li> }
                    </ul>
                </div>
                <div class="search">
                    <form role="form">
                        <i class="fa fa-search"></i>
                        <div class="field-toggle">
                            <input type="text" class="search-form" autocomplete="off" placeholder="Поиск" name="fstring"
                            hx-get="/Search" hx-trigger="keyup changed delay:1s" hx-target=".searchResult" hx-indicator=".search-form"/>
                            <div class="searchResult">

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
