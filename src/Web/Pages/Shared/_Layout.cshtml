                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="@(ViewData["Title"]?.ToString() == "Домашняя" ? "active" : "")" ><a asp-area="" asp-page="/Index">Домашняя</a></li>        
