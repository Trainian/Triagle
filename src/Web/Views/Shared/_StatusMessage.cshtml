@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Ошибка") ? "danger" : "success";
    <div class="alert alert-@statusMessageClass fade in">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4>@(Model.StartsWith("Ошибка") ? "Произошла какая-то ошибка!" : "Все прошло успешно!")</h4>
        <p>@Model</p>
    </div>
}